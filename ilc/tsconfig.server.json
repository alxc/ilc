{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./server/**/*.ts",
    "./server/**/*.js",
    "./common/**/*.ts",
    "./common/**/*.js"
  ],
  "exclude": [
    "./node_modules",
    "./server.plugins.manifest.js"
  ]
}
