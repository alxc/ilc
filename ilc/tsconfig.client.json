{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./client/**/*.ts",
    "./client/**/*.js",
    "./common/**/*.ts",
    "./common/**/*.js",
    "./system/**/*.js"
  ],
  "exclude": [
    "./node_modules"
  ]
}
